<UserControl x:Class="Quiz_Solver_App.View.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quiz_Solver_App.View"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
        <TextBlock Text="Rozwiąż quiz"
           FontSize="40"
           FontWeight="Bold"
           Margin="20,50,20,100"
           HorizontalAlignment="Center"/>
        <Button Content="Wybierz plik .json"
            Command="{Binding SelectJsonFileCommand}" 
            Width="200" Height="40" Margin="10,10,10,25"/>
    </StackPanel>
</UserControl>
