<Window x:Class="Quiz_Solver_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:Quiz_Solver_App.ViewModel"
        xmlns:views="clr-namespace:Quiz_Solver_App.View"
        Title="Quiz_Solver_App" Height="700" Width="1200">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:MainMenuViewModel}">
            <views:MainMenu />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:QuizSolverViewModel}">
            <views:QuizSolver />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
