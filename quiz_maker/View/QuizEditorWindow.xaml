<Window x:Class="quiz_maker.View.QuizEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:quiz_maker.ViewModel"
        Title="Quiz Maker" Height="500" Width="800">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0">
            <TextBlock Text="Nazwa Quizu:" FontWeight="Bold" />
            <TextBox Text="{Binding CurrentQuiz.Title, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1">
            <TextBlock Text="Pytania:" FontWeight="Bold" />
            <ListBox ItemsSource="{Binding CurrentQuiz.Questions}" 
                     DisplayMemberPath="Text"
                     SelectedItem="{Binding SelectedQuestion}" Height="250"/>
            <Button Content="Dodaj Pytanie" Command="{Binding AddQuestionCommand}" Margin="0,10,0,0"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,0,0,0">
            <TextBlock Text="Szczegóły pytania:" FontWeight="Bold"/>
            <TextBox Text="{Binding SelectedQuestion.Text, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Odpowiedzi:" Margin="0,10,0,0"/>
            <ItemsControl ItemsSource="{Binding SelectedQuestion.Answers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsCorrect}" Margin="0,0,5,0"/>
                            <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Content="Dodaj Odpowiedź" Command="{Binding AddAnswerCommand}" Margin="0,10,0,0"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="2">
            <Button Content="Zapisz"
            Command="{Binding SaveToJsonCommand}"
            Height="40"
            Width="80"
            HorizontalAlignment="Right"
            Margin="0,10,10,0" />
        </StackPanel>
    </Grid>
</Window>