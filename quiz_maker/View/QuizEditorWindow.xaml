<UserControl x:Class="quiz_maker.View.QuizEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:quiz_maker.ViewModel">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0">
            <TextBlock Text="Nazwa Quizu:" FontWeight="Bold" />
            <TextBox Text="{Binding CurrentQuiz.Title, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1">
            <TextBlock Text="Pytania:" FontWeight="Bold" />
            <ListBox ItemsSource="{Binding CurrentQuiz.Questions}"
                    SelectedItem="{Binding SelectedQuestion}" Height="250">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content="Dodaj Pytanie" Command="{Binding AddQuestionCommand}" Margin="0,10,0,0"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,0,0,0">
            <TextBlock Text="Szczegóły pytania:" FontWeight="Bold"/>
            <TextBox Text="{Binding SelectedQuestion.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />


            <TextBlock Text="Odpowiedzi:" Margin="0,10,0,0"/>

            <ListBox ItemsSource="{Binding SelectedQuestion.Answers}" Margin="0,5,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="0,0,10,0"/>
                            <CheckBox IsChecked="{Binding IsCorrect}" Content="Correct"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Content="Dodaj Odpowiedź" Command="{Binding AddAnswerCommand}" Margin="0,10,0,0"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,10,0">
            <Button Content="⬅️ Odrzuć zmiany"
            Command="{Binding BackToMenuCommand}"
            Height="40"
            Width="130"
            Margin="0,0,10,0" />

            <Button Content="Zapisz"
            Command="{Binding SaveToJsonCommand}"
            Height="40"
            Width="80" />
        </StackPanel>
    </Grid>
</UserControl>